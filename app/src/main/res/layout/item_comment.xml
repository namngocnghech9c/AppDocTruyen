<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_cmt"
        android:paddingBottom="20dp">


        <RelativeLayout
            android:id="@+id/not_use11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_txt_cmt">

            <ImageView
                android:id="@+id/img_options_cmt"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_options_24" />
            <TextView
                android:id="@+id/tv_fullname_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/fontchudao"
                android:text="Tên người dùng"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_toLeftOf="@+id/img_options_cmt"/>

            <TextView
                android:id="@+id/tv_noidungcmt_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fullname_item"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif"
                android:text="nội dung bình luận"
                android:textColor="#A12E2D2D"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/not_use11"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/fontchudao"
            android:text="12:00"
            android:textSize="12dp"
            android:textStyle="normal" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>